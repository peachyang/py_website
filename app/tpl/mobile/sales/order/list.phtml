<?php
$orders = $this->getOrders();
?>
<div class="table-responsive">
    <table class="table table-hover table-striped table-no-border text-center">
        <thead class="sort-by">
            <tr>
                <th class="col-lg-3 col-xs-3 text-center"><?php echo $this->translate('ID'); ?></th>
                <th class="col-lg-2 col-xs-2 text-center"><?php echo $this->translate('Price'); ?></th>
                <th class="col-lg-2 col-xs-2 text-center"><?php echo $this->translate('Status'); ?></th>
