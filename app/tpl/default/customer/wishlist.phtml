<?php
$wishlists = $this->getVariable('wishlist');
?>
<div class="col-xs-9 col-sm-9 col-md-10 wishlist">
    <h3><?php echo $this->translate('My Wishlist');?></h3>
    <form action="<?php echo $this->getBaseUrl('customer/account/add/') ?> " method="post">
        <table class="table">
            <tbody>
                <?php
                if (!empty($wishlists)) {
                    foreach ($wishlists as $item):
                        $product = new \Seahinet\Catalog\Model\Product;
                        $product->load($item['product_id']);
                        ?>
                        <tr>
                            <td>
                                <a href="<?php echo $this->$product->getUrl();?>" title="<?php echo $product['name'] ?>" >
                                    <img src="<?php echo $product['thumbnail'] ? $this->getBaseUrl('pub/resource/image/' . $product['thumbnail']) : $this->getPubUrl('frontend/images/placeholder.png') ?>" alt="<?php echo $product['name'] ?>" />
                                </a>
                            </td>
                            <td>
                                <?php echo $item['product_name'] ?>
                                <textarea name="description[<?php echo $item['id'] ?>]" class="form-control"><?php echo $item['description'] ?></textarea>
                            </td>
                            <td>        	
                                <a href="<?php echo $this->getBaseUrl('customer/account/delete/?id='), $item['id'] ?>" ><?php echo $this->translate('Delete') ?></a>
                            </td>
                        </tr>        
                        <?php
                    endforeach;
                }else {
                    echo NULL;
                }
                ?>
            </tbody>
         </table>
    </form>
</div>