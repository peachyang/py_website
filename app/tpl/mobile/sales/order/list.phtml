                <th class="col-lg-2 col-xs-2 text-center"><?php echo $this->translate('Action'); ?></th>
            </tr>
        </thead>
        <?php if (count($orders)): ?>
            <tbody>
                <?php foreach ($orders as $order): ?>  
                    <tr>
