<dl class="total">
    <dt><?php echo $this->translate('Qty') ?></dt>
    <dd><?php echo $this->getQty() ?></dd>
    <?php
    if (!$this->getVariable('simplify')):
        if ((float) $this->getCart()['discount']):
            foreach (json_decode($this->getCart()['discount_detail'], true) as $type => $discount):
                ?>
                <dt><?php echo $this->translate('Discount(%s)', [$type]) ?></dt>
                <dd><?php echo $this->getCurrency()->format($discount) ?></dd>
                <?php
            endforeach;
        endif;
        ?>
        <?php
        if ($this->getCart()['shipping']):
            ?>
            <dt><?php echo $this->translate('Shipping') ?></dt>
            <dd><?php echo $this->getCurrency()->format($this->getCart()['shipping']) ?></dd>
            <?php
        endif;
    endif;
    ?>
    <dt><?php echo $this->translate('Total') ?></dt>
    <dd><?php echo $this->getCurrency()->format($this->getCart()['total']) ?></dd>
</dl>