<?php
$orders = $this->getOrders();
?>
<table class="table table-no-border text-center orders-list">
    <?php if (count($orders)): ?>
        <thead class="sort-by">
            <tr class="text-nowrap">
                <th class="text-left" colspan="2"><?php echo $this->translate('Product(s)') ?></th>
                <th class="text-center"><?php echo $this->translate('Price') ?></th>
                <th class="text-center"><?php echo $this->translate('Qty') ?></th>
                <th class="text-center"><?php echo $this->translate('Total') ?></th>
                <th class="text-center"><?php echo $this->translate('Action') ?></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($orders as $order): ?>  
                <tr class="thead_title">
                    <td colspan="2" class="text-left"><?php echo $order->getStore()->offsetGet('name') ?></td>
                    <td colspan="3" class="text-nowrap text-right"><?php echo $this->translate('Order ID'), ': ', $order->offsetGet('increment_id') ?></td>
                    <td class="text-nowrap text-right"><?php echo date('Y-m-d', strtotime($order->offsetGet('created_at'))) ?></td>
                </tr>
                <?php
                $items = $order->getItems();
                $flag = true;
                foreach ($items as $item):
                    $product = $item['product'];
                    $thumbnail = $product->getThumbnail();
                    ?>
                    <tr class="thead_body">
                        <td>
                            <img src="<?php echo strpos($thumbnail, '//') === false ? $this->getResourceUrl('image/resized/100x/' . $thumbnail) : $thumbnail ?>" width="100" height="100" alt="<?php echo $product->offsetGet('name') ?>" />
                        </td>
                        <td class="text-left text-vtop" title="<?php echo $product->offsetGet('name') ?>">
                            <h4 class="product-name"><?php echo $product->offsetGet('name') ?></h4>
                            <?php
                            $options = json_decode($item['options'], true);
                            if ($item['product_id'] && count($options)):
                                ?>
                                <dl class="options">
                                    <?php
                                    foreach ($product->getOptions() as $option):
                                        if (isset($options[$option->getId()])):
                                            ?>
                                            <dt><?php echo $option['title'] ?></dt>
                                            <dd>
                                                <?php
                                                echo (in_array($option['input'], ['select', 'radio', 'checkbox', 'multiselect']) ?
                                                        $option->getValue($options[$option->getId()]) : $options[$option->getId()])
                                                ?>
                                            </dd>
                                            <?php
                                        endif;
                                    endforeach;
                                    ?>
                                </dl>
                            <?php endif; ?>
                        </td>
                        <td><?php echo $order->getCurrency()->format($item->offsetGet('price')) ?></td>
                        <td><?php echo (float) $item->offsetGet('qty') ?></td>
                        <?php if ($flag): ?>
                            <td rowspan="<?php echo count($items) ?>" class="text-nowrap color-blue">
                                <?php echo $order->getCurrency()->format($order->offsetGet('total')) ?><p><?php echo $this->translate('(Including Shipping Fee: %s)', [$order->getCurrency()->format($order->offsetGet('shipping'))]) ?></p>
                            </td>
                            <td rowspan="<?php echo count($items) ?>" class="action">
                                <?php if ($order->canRefund()): ?>
                                    <a href="<?php echo $this->getBaseUrl('sales/refund/apply/?id=' . $order['id']) ?>"><?php echo $this->translate('Refund Application') ?></a>
                                <?php endif ?>
                                <?php if ($order->canReview()): ?>
                                    <a href="<?php echo $this->getBaseUrl('sales/order/review/?id=' . $order['id']) ?>"><?php echo $this->translate('Add Review') ?></a>
                                <?php endif ?>
                                <a href="<?php echo $this->getBaseUrl('sales/order/view/?id=' . $order['id']) ?>"><?php echo $this->translate('View Details') ?></a>
                            </td>
                            <?php
                            $flag = false;
                        endif;
                        ?>
                    </tr>
                <?php endforeach; ?>
            <?php endforeach; ?>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6">
                    <?php echo $this->getChild('pager')->setCollection($orders) ?>
                </td>
            </tr>
        </tfoot>
    <?php else: ?>
        <tr>
            <td colspan="6" class="text-center"><?php echo $this->translate('You have placed no orders.') ?></td>
        </tr>
    <?php endif ?>
</table>
