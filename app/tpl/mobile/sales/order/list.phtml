                        <td><?php echo $order->offsetGet('created_at') ?></td>
                        <td><a href="<?php echo $this->getBaseUrl('sales/order/view/?id=' . $order['id']) ?>"><?php echo $this->translate('View Details') ?></a></td>
                    </tr>             
                <?php endforeach; ?>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5">
                        <?php echo $this->getChild('pager')->setCollection($orders) ?>
