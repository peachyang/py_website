    </ul>
    <div class="grand-total">
        <ul class="col-xs-9 col-sm-9 text-right">
            <li >
                <?php echo $this->translate('Grand Total') ?>:<span><?php echo $this->getCurrency()->format($this->getCart()['total']) ?></span>
            </li>
        </ul>
        <ul class="col-xs-3 col-sm-3 buttons-set">
