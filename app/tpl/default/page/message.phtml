<?php
$messages = $this->getMessages();
?>
<div class="message-box<?php if (!$this->getVariable('inline')): ?> container<?php endif ?>"><?php foreach ($messages as $message): ?>
        <div class="alert alert-<?php echo $message['level'] ?? 'info' ?>">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
            <?php echo is_scalar($message) ? $message : $message['message'] ?>
        </div>
    <?php endforeach ?></div>
