<!--=== Breadcrumbs ===-->
<?php
$crumbs = $this->getCrumbs();
if (count($crumbs)):
    $last = array_pop($crumbs);
    ?>
    <div class="breadcrumbs margin-bottom-40">
        <div class="container">
            <h1 class="color-green pull-left">
                <?php
                $str = mb_substr($this->translate($last['label']), 0, 4, 'utf-8');
                echo strlen($this->translate($last['label'])) <= 12 ? $this->translate($last['label']) : $str . '……';
                ?>
            </h1>
            <ul class="pull-right breadcrumb">
                <?php if ($this->showLabel): ?>
                    <li class="label"><span><?php echo $this->translate('Location') ?>: </span></li>
                <?php endif ?>
                <?php if ($this->showHome): ?>
                    <li class="home"><a href="<?php echo $this->isAdminPage() ? $this->getAdminUrl() : $this->getBaseUrl() ?>" title="<?php echo $this->translate('Home') ?>"><?php echo $this->translate('Home') ?></a></li>
                <?php endif ?>
                <?php foreach ($crumbs as $crumb): ?>
                    <li><a href="<?php echo $this->isAdminPage() ? $this->getAdminUrl($crumb['link']) : $this->getBaseUrl($crumb['link']) ?>" title="<?php echo $this->translate($crumb['label']) ?>"><?php echo $this->translate($crumb['label']) ?></a></li>
                <?php endforeach ?>
                <li class="active"><span><?php echo $this->translate($last['label']) ?></span></li>
            </ul>
        </div><!--/container-->
    </div><!--/breadcrumbs-->
<?php endif; ?>
<!--=== End Breadcrumbs ===-->

